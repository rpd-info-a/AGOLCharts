{
    "inputs": [
        {
            "name": "time",
            "type": [
                "time"
            ],
            "required": true
        },
        {
            "name": "value",
            "type": [
                "numeric"
            ],
            "required": true
        },
        {
            "name": "group",
            "type": [
                "numeric"
            ],
            "required": true
        }
    ],
    "template": {
        "padding": "strict",
        "data": [
            {
                "name": "table",
                "url": "{data}&orderByFields={time.field}",
                "format": {
                    "type": "json",
                    "property": "features"
                }
            },
            {
                "name": "exports",
                "source": "table",
                "transform": [
                    {
                        "type": "formula",
                        "field": "export",
                        "expr": "datum"
                    }
                ]
            },
            {
                "name": "stats",
                "source": "table",
                "transform": [
                    {
                        "type": "aggregate",
                        "groupby": [
                            "attributes.{time.field}"
                        ],
                        "summarize": [
                            {
                                "field": "attributes.{value.field}",
                                "ops": [
                                    "sum",
                                    "median",
                                    "stdev"
                                ],
                                "as": [
                                    "attributes_sum",
                                    "attributes_mean",
                                    "attributes_stdev"
                                ]
                            }
                        ]
                    },
                    {"type": "formula", "field": "upper", "expr": "datum.attributes_stdev+datum.attributes_mean"},
                    {"type": "formula", "field": "lower", "expr": "datum.attributes_mean-datum.attributes_stdev"}
                ]
            }
        ],
        "scales": [
            {
                "name": "x",
                "type": "linear",
                "range": "width",
                "zero": false,
                "domain": {
                    "data": "stats",
                    "field": "[attributes.{time.field}]"
                }
            },
            {
                "name": "y",
                "type": "linear",
                "range": "height",
                "nice": true,
                "domain": {
                    "data": "stats",
                    "field": "upper"
                }
            }
        ],
        "axes": [
            {
                "type": "x",
                "scale": "x",
                "titleOffset": 60,
                "title": "{time.label}",
                "properties": {
                    "title": {
                        "fontSize": {
                            "value": 15
                        },
                        "fill": {
                            "value": "#999"
                        },
                        "fontWeight": {
                            "value": "normal"
                        }
                    },
                    "ticks": {
                        "stroke": {
                            "value": "#dbdad9"
                        }
                    },
                    "labels": {
                        "fill": {
                            "value": "#999"
                        },
                        "fontSize": {
                            "value": 13
                        }
                    },
                    "axis": {
                        "stroke": {
                            "value": "#dbdad9"
                        },
                        "strokeWidth": {
                            "value": 1
                        }
                    }
                }
            },
            {
                "type": "y",
                "scale": "y",
                "ticks": 5,
                "titleOffset": 55,
                "title": "{value.label}",
                "properties": {
                    "title": {
                        "fontSize": {
                            "value": 15
                        },
                        "fill": {
                            "value": "#999"
                        },
                        "fontWeight": {
                            "value": "normal"
                        }
                    },
                    "ticks": {
                        "stroke": {
                            "value": "#dbdad9"
                        }
                    },
                    "labels": {
                        "fill": {
                            "value": "#999"
                        },
                        "fontSize": {
                            "value": 13
                        }
                    },
                    "axis": {
                        "stroke": {
                            "value": "#dbdad9"
                        }
                    }
                }
            }
        ],
        "marks": [
            {
                "type": "symbol",
                "from": {
                    "data": "stats"
                },
                "properties": {
                    "enter": {
                        "x": {
                            "scale": "x",
                            "field": "[attributes.{time.field}]"
                        },
                        "y": {
                            "scale": "y",
                            "field": "[attributes_mean]"
                        },
                        "stroke": {
                            "value": "#0079c1"
                        },
                        "fill": {
                            "value": "#0079c1"
                        },
                        "size": {
                            "value": 20
                        },
                        "fillOpacity": {
                            "value": 0.8
                        },
                        "hover": {
                            "fill": {
                                "value": "#0079c1"
                            },
                            "size": {
                                "value": 25
                            }
                        },
                        "update": {
                            "x": {
                                "scale": "x"
                            },
                            "fill": {
                                "value": "#f00"
                            }
                        }
                    }
                }
            },
            {
                "type": "line",
                "from": {
                    "data": "stats"
                },
                "properties": {
                    "enter": {
                        "x": {
                            "scale": "x",
                            "field": "[attributes.{time.field}]"
                        },
                        "y": {
                            "scale": "y",
                            "field": "[attributes_mean]"
                        },
                        "y2": {
                            "scale": "y",
                            "value": 0
                        },
                        "stroke": {
                            "value": "#0079c1"
                        }
                    }
                }
            },
            {
                "type": "line",
                "from": {
                    "data": "stats"
                },
                "properties": {
                    "enter": {
                        "x": {
                            "scale": "x",
                            "field": "[attributes.{time.field}]"
                        },
                        "y": {
                            "scale": "y",
                            "field": "upper"
                        },
                        "y2": {
                            "scale": "y",
                            "value": 0
                        },
                        "stroke": {
                            "value": "#D3D3D3"
                        }
                    }
                }
            },
            {
                "type": "line",
                "from": {
                    "data": "stats"
                },
                "properties": {
                    "enter": {
                        "x": {
                            "scale": "x",
                            "field": "[attributes.{time.field}]"
                        },
                        "y": {
                            "scale": "y",
                            "field": "lower"
                        },
                        "y2": {
                            "scale": "y",
                            "value": 0
                        },
                        "stroke": {
                            "value": "#D3D3D3"
                        }
                    }
                }
            }
        ]
    }
}